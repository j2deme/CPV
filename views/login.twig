{% import "forms.twig" as f %}
{% extends 'base.twig' %}

{% block css %}
.form-signin .form-control {
  position: relative;
  height: auto;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
  padding: 10px;
  font-size: 16px;
}
.form-signin input[type="text"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
{% endblock %}

{% block content %}
  <div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    {% if flash.error is defined %}
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong>¡Error!</strong>
      {% autoescape false %}
      {{ flash.error }}
      {% endautoescape %}
    </div>
    {% endif %}
    <form class="form-signin" role="form" action="{{ urlFor('check-login') }}" method="post">
      <h2 class="form-signin-heading">Iniciar Sesión</h2>
      {{ f.text('usuario', 'Usuario','', 25, false,true) }}
      {{ f.password('password','Contraseña') }}
      <button class="btn btn-primary" type="submit"><i class="fa fa-sign-in"></i> Entrar</button>&emsp;<a href="{{ urlFor('root') }}">Cancelar</a>
    </form>
  </div>
  <div class="col-md-4"></div>
  </div>
{% endblock %}

{% block js %}
{% endblock %}
